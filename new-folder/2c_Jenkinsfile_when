/*
The when directive allows the Pipeline to determine whether the stage should be executed depending on the given condition.
*/
pipeline {
    agent any
    Parameter {
            choice(name: 'CHOICE', choices: ['dev', 'qa', 'prod'], description: 'Pick something')
    }
    environment {
        SDLC_ENV = '${params.CHOICE}'
    }
    stages {
        stage('Example Build') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Example Deploy') {
            when {
                environment name: 'SDLC_ENV', value: 'dev'
            }
            steps {
                echo 'Deploying Code'
            }
        }
    }
}
